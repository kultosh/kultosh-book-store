<div>
    <label for="title">Title</label>
    <input type="text" name="title" value="<%= book.title %>">
</div>

<div>
    <label for="author">Author</label>
    <select name="author" id="">
        <% authors.forEach(author => { %>
        <option value="<%= author.id %>"><%= author.name %></option>
        <%}) %>
    </select>
</div>

<div>
    <label for="published-date">Published Date</label>
    <input type="date" name="publishDate" value="<%= book.publishDate == null ? '' : book.publishDate.toISOString().split('T')[0] %>">
</div>

<div>
    <label for="page-count">Page Count</label>
    <input type="number" name="pageCount" min="1">
</div>

<div>
    <label for="coverImage">Cover</label>
    <input type="file" name="coverImage">
</div>

<div>
    <label for="description">Description</label>
    <textarea name="description" id="" cols="30" rows="10"></textarea>
</div>